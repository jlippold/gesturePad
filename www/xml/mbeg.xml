<!-- gesture Pad config  -->

<gesturePad>

	<devices>

		<device shortname='MCE' useNumberPad="true">

			<name>Media Center</name>

			<commands>

				<category>

					<name>Inputs</name>

					<command>

						<name>Media Center</name>

						<action>

							<method>GET</method>

							<data><![CDATA[Switch_MCE]]></data>				

							<dataType>text</dataType>

							<onCompleteSetDevice shortname='MCE'>Movies</onCompleteSetDevice>

						</action>

					</command>

					<command>

						<name>DirecTV</name>

						<action>

							<method>GET</method>

							<data><![CDATA[Switch_TV]]></data>			      

							<dataType>text</dataType>

							<onCompleteSetDevice shortname='DTV'>Television</onCompleteSetDevice>

						</action>

					</command>

				</category>

				<category>

					<name>Television</name>

					<command>

						<name>Power</name>

						<action>

							<method>GET</method>

							<data><![CDATA[TV_Power]]></data>				

							<dataType>text</dataType>

						</action>

					</command>

					<command>

						<name>Mute</name>

						<action>

							<method>GET</method>

							<data><![CDATA[Volume_Mute]]></data>			      

							<dataType>text</dataType>

						</action>

					</command>

					<command>

						<name>VolumeUp</name>

						<action>

							<method>GET</method>

							<data><![CDATA[Volume_Up]]></data>			      

							<dataType>text</dataType>

						</action>

					</command>

					<command>

						<name>VolumeDown</name>

						<action>

							<method>GET</method>

							<data><![CDATA[Volume_Down]]></data>			      

							<dataType>text</dataType>

						</action>

					</command>

				</category>

				<category>

					<name>Computer</name>

					<command>

						<name>Restart PC</name>

						<action>

							<method>GET</method>

							<data><![CDATA[Restart_PC]]></data>				

							<dataType>text</dataType>

						</action>
						
						<gesture definition='1.U.R.D.L.R.D' />

					</command>

					<command>

						<name>Restart MCE</name>

						<action>

							<method>GET</method>

							<data><![CDATA[Restart_MCE]]></data>			      

							<dataType>text</dataType>

						</action>

					</command>

					<command>

						<name>Green Button</name>

						<action>

							<dataType>text</dataType>

							<method>GET</method>

							<data><![CDATA[GreenButton]]></data>	

						</action>

					</command>

				</category>


				<category>

					<name>Navigation</name>

					<command>

						<name>Up</name>

						<action>

							<dataType>text</dataType>

							<method>GET</method>

							<data><![CDATA[Up]]></data>	

						</action>

						<gesture definition='1.U' />	

					</command>

					<command>

						<name>Down</name>

						<action>

							<dataType>text</dataType>

							<method>GET</method>

							<data><![CDATA[Down]]></data>	

						</action>

						<gesture definition='1.D' />	

					</command>

					<command>

						<name>Left</name>

						<action>

							<dataType>text</dataType>

							<method>GET</method>

							<data><![CDATA[Left]]></data>	

						</action>

						<gesture definition='1.L' />	

					</command>

					<command>

						<name>Right</name>

						<action>

							<dataType>text</dataType>

							<method>GET</method>

							<data><![CDATA[Right]]></data>	

						</action>

						<gesture definition='1.R' />	

					</command>

					<command>

						<name>OK</name>

						<action>

							<dataType>text</dataType>

							<method>GET</method>

							<data><![CDATA[Ok]]></data>	

						</action>

						<gesture definition='1.Tap' />

					</command>

					<command>

						<name>Back</name>

						<action>

							<dataType>text</dataType>

							<method>GET</method>

							<data><![CDATA[Back]]></data>	

						</action>

						<gesture definition='1.DblTap' />

					</command>

					<command>

						<name>Page Up</name>

						<action>

							<dataType>text</dataType>

							<method>GET</method>

							<data><![CDATA[ChannelDown]]></data>	

						</action>

						<gesture definition='1.LSR' />

						<gesture definition='1.LSU' />

					</command>

					<command>

						<name>Page Down</name>

						<action>

							<dataType>text</dataType>

							<method>GET</method>

							<data><![CDATA[ChannelUp]]></data>	

						</action>

						<gesture definition='1.LSL' />

						<gesture definition='1.LSD' />

					</command>

				</category>

				<category>

					<name>Playback</name>

					<command>

						<name>Play</name>

						<action>

							<dataType>text</dataType>

							<method>GET</method>

							<data><![CDATA[Play]]></data>	

						</action>

						<gesture definition='1.U.D' />

					</command>

					<command>

						<name>Pause</name>

						<action>

							<dataType>text</dataType>

							<method>GET</method>

							<data><![CDATA[Pause]]></data>	

						</action>

						<gesture definition='1.D.U' />

					</command>

					<command>

						<name>Stop</name>

						<action>

							<dataType>text</dataType>

							<method>GET</method>

							<data><![CDATA[Stop]]></data>

						</action>
						
						<gesture definition='1.L.R.L' />
						
					</command>

					<command>

						<name>Change Language</name>

						<action>

							<dataType>text</dataType>

							<method>GET</method>

							<data><![CDATA[Lang]]></data>	

						</action>

					</command>

					<command>

						<name>Subtitles</name>

						<action>

							<dataType>text</dataType>

							<method>GET</method>

							<data><![CDATA[Sub]]></data>	

						</action>

					</command>

					<command>

						<name>Subtitles Off</name>

						<action>

							<dataType>text</dataType>

							<method>GET</method>

							<data><![CDATA[SubOff]]></data>	

						</action>

					</command>

					<command>

						<name>Skip Forward</name>

						<action>

							<dataType>text</dataType>

							<method>GET</method>

							<data><![CDATA[SkipForward]]></data>

						</action>

						<gesture definition='1.R.L' />

					</command>

					<command>

						<name>Skip Back</name>

						<action>

							<dataType>text</dataType>

							<method>GET</method>

							<data><![CDATA[SkipBack]]></data>

						</action>

						<gesture definition='1.L.R' />

					</command>


				</category>


				<category>

					<name>Other</name>

					<command>

						<name>Info</name>

						<action>

							<dataType>text</dataType>

							<method>GET</method>

							<data><![CDATA[Info]]></data>

						</action>

					</command>

					<command>

						<name>Star</name>

						<action>

							<dataType>text</dataType>

							<method>GET</method>

							<data><![CDATA[Star]]></data>

						</action>
						
						<gesture definition='1.L.D.R.D.L' />
						<gesture definition='1.D.U.D.U' />

					</command>


				</category>
			</commands>

		</device>
		
	</devices>

	<rooms>
		<room index="0" />
		<room index="1" />
		<room index="2" />
		<room index="3" />
		<room index="4" />

		<roomgestures> <!-- gestures that run globally / independant of current device -->

			<gesture definition='nothing'>	  

				<device shortname='MCE'>

					<command>

						<name>Mute</name>

					</command>

				</device>

			</gesture>
			
			<gesture definition='1.U.R'>	  

				<device shortname='MCE'>

					<command>

						<name>VolumeUp</name>

					</command>

				</device>

			</gesture>

			<gesture definition='1.U.L'>	  

				<device shortname='MCE'>

					<command>

						<name>VolumeDown</name>

					</command>

				</device>

			</gesture>     
			
			<gesture definition='1.U.R.D.L'>	

				<device shortname='MCE'>

					<command>

						<name>Power</name>

					</command>

				</device>

			</gesture>	  
			
			<gesture definition='1.U.R.L'>	

				<device shortname='MCE'>

					<command>

						<name>Power</name>

					</command>

				</device>

			</gesture>	 
   

		</roomgestures>
	</rooms>



</gesturePad>





